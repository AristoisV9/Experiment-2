#include <iostream>

using namespace std;

int main()
{
    int a; 
    int b;
    int c;
    
    
    cout << "Enter a number: ";
    
	do
	{
		c=0;
		cin >> a;
	    for (b=1;b<=a;b++)	
	        c+=b;
	    cout << "The sum of all whole numbers from 1 to "<< a <<" is "<< c <<"\n";
	}	while(a!=0);
	while(a==0)
	{
		cout <<"Thank you!";
	break;
	}
    return 0;
}  
